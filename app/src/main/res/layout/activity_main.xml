<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_16"
        tools:context="com.example.android.justjava2.MainActivity">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_name"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_16"
            android:paddingTop="@dimen/padding_16"
            android:text="@string/toppings_title"
            android:textAllCaps="true" />

        <CheckBox
            android:id="@+id/whipped_cream_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_24"
            android:paddingLeft="@dimen/padding_24"
            android:paddingRight="@dimen/padding_24"
            android:paddingStart="@dimen/padding_24"
            android:text="@string/topping_whipped_cream"
            android:textSize="@dimen/toppings_text_size" />

        <CheckBox
            android:id="@+id/chocolate_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_24"
            android:paddingLeft="@dimen/padding_24"
            android:paddingRight="@dimen/padding_24"
            android:paddingStart="@dimen/padding_24"
            android:text="@string/topping_chocolate"
            android:textSize="@dimen/toppings_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_16"
            android:text="@string/quantity_title"
            android:textAllCaps="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_8"
            android:paddingBottom="@dimen/padding_16">

            <Button
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:onClick="decrement"
                android:text="@string/minus_button" />

            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_8"
                android:text="@string/quantity_start"
                android:textColor="@android:color/black"
                android:textSize="@dimen/toppings_text_size" />

            <Button
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:onClick="increment"
                android:text="@string/plus_button" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="submitOrder"
            android:text="@string/order_button" />

    </LinearLayout>
</ScrollView>
